<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/euclid_circular_b_semibold</item>
        <item name="android:textColor">@color/txtBlack</item>
    </style>

    <style name="TextViewCastle">
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/euclid_circular_b_regular</item>
        <item name="android:background">@drawable/bg_level_castle</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textColor">@color/txtBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/euclid_circular_b_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewDesc">
        <item name="android:textColor">@color/txtDesc</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/euclid_circular_b_regular</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>